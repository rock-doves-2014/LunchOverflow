<h2><%= @post.title %> - <%= @post.address %></h2>
<h4><%= @post.content %></h4>
<% @post.tags.each do |tag| %>
  <%= link_to tag.name, tagged_url(:tag => tag.name) %>
<% end %>
<h3>Comments</h3>

<ul>
  <%= comments_tree_for @comments %>
</ul>

<% if current_user %>
  <%= link_to "Add Comment", new_post_comment_path(@post) %>
<% end %>